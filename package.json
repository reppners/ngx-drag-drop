    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mobile-drag-drop": "^2.1.0",
    "ng-packagr": "^1.6.0",
    "protractor": "~5.1.0",
    "run-sequence": "^1.2.2",
    "rxjs": "^5.5.6",
    "ts-node": "~2.0.0",
    "tslint": "^5.9.1",
